<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="butecogaragem.cursoandroid.com.butecogaragem.TelaPreFinal"
    android:background="#383333">

    <CheckBox
        android:id="@+id/checkBox_Meia"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp"
        android:checked="false"
        android:text="MEIA"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/texto_meia" />

    <CheckBox
        android:id="@+id/checkBox_Inteira"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBox_Meia"
        android:layout_marginTop="13dp"
        android:checked="false"
        android:text="INTEIRA"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/texto_inteira" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/checkBox_Inteira"
        android:layout_alignRight="@+id/checkBox_Inteira"
        android:layout_below="@+id/checkBox_Inteira"
        android:layout_marginTop="32dp"
        android:text="OBSERVAÇÃO:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/editText_obs"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginTop="33dp"
        android:background="#ffffff"
        android:backgroundTint="#ffffff"
        android:gravity="top"
        android:inputType="textCapCharacters"
        android:singleLine="false"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="@dimen/texto_observação"
        android:visibility="visible" />

    <Button
        android:id="@+id/buttonPreFinalVoltar"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/abc_vector_test"
        android:textSize="@dimen/texto_outro_iten"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_Proximo"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_above="@+id/buttonPreFinalVoltar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        android:text="Próximo"
        android:textSize="@dimen/texto_finalizar"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/checkBox_Meia"
        android:layout_marginEnd="37dp"
        android:text="Status "
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="121dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/checkBox_Meia"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textColor="#ffffff"
        android:textSize="25sp" />

</RelativeLayout>

