<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="butecogaragem.cursoandroid.com.butecogaragem.TelaPorco"
    android:background="#383333">

    <Button
        android:id="@+id/button_costelinha"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/button_pernil"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button_pernil"
        android:layout_marginTop="115dp"
        android:backgroundTint="#86ffffff"
        android:text="COSTELINHA"
        android:textColor="#000000"
        android:textSize="@dimen/texto_costelinha"
        android:textStyle="bold" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="PERNIL"
        android:id="@+id/button_pernil"
        android:layout_below="@+id/button_costelinha"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#86ffffff"
        android:textColor="#000000"
        android:textSize="@dimen/texto_pernil"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_below="@+id/button_pernil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:src="@drawable/c" />

    <Button
        android:id="@+id/buttonPorcoVoltar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/abc_vector_test" />

</RelativeLayout>
